@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="account-pages my-5 pt-sm-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-5">
                <div class="card overflow-hidden">
                    <div class="card-body pt-0">
                        <div class="p-2">
                            <a href="/Home/" class="auth-logo-light">
                                <div class="avatar-md profile-user-wid mb-4 mt-4">
                                    <span class="avatar-title rounded-circle bg-dark">
                                        <img src="~/assets/images/site/logo.png" alt="" class="rounded-circle" height="90" style="border: solid 1px gray">
                                    </span>
                                </div>
                            </a>
                            <h5>Welcome to OBPLS !</h5>
                            <p>Sign in your account.</p>

                            <form id="account" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="mb-3">
                                    <label asp-for="Input.Email" class="form-label">Username</label>
                                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Enter username" type="text" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Input.Password" class="form-label"></label>
                                    <div class="input-group auth-pass-inputgroup">
                                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Enter password" aria-label="Password" aria-describedby="password-addon" type="password" />
                                        @*    <button class="btn btn-light " type="button" id="password-addon"><i class="mdi mdi-eye-outline"></i></button>*@
                                    </div>
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>

                                <div class="form-check">
                                    <div class="checkbox">
                                        <label asp-for="Input.RememberMe" class="form-label">
                                            <input class="form-check-input" asp-for="Input.RememberMe" />
                                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                                        </label>
                                    </div>
                                </div>
                                <div class="mt-2 d-grid">
                                    <button id="login-submit" type="submit" class="btn btn-primary waves-effect waves-light">Log in</button>
                                </div>
                                <br />
                               @*  <div class="mt-2 text-center">
                                    <a id="forgot-password" asp-page="./ForgotPassword" class="text-muted"><i class="mdi mdi-lock me-1"></i> Forgot your password?</a>
                                </div> *@
                                <div class="mt-2 text-center">
                                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-muted"><i class="mdi mdi-account-box me-1"></i> Register as a new user</a>
                                </div>
                          @*       <div class="mt-2 text-center">
                                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-muted"><i class="mdi mdi-email me-1"></i> Resend email confirmation</a>
                                </div> *@
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@using OBLS.Static
@model OBLS.Models.Requirements

@{
    ViewBag.Title = "Requirements";
    ViewBag.pTitle = "Requirements";
    ViewBag.pageTitle = "Delete";

    ListRoles List = new ListRoles();
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h5>Are you sure you want to delete this?</h5>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UserRolesId)
                    </dt>
                    <dd class="col-sm-10">
                        @foreach (var r in List.Roles.Where(m => m.Id == Model.UserRolesId.ToString()))
                        {
                            <span>@r.Name</span>
                        }
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.IsUpload)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.IsUpload)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <a asp-action="Index" class="btn btn-secondary">Back</a>
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>
</div>

@using OBLS.Static
@model OBLS.Models.Requirements

@{
    ViewBag.Title = "Requirements";
    ViewBag.pTitle = "Requirements";
    ViewBag.pageTitle = "Create";

    ListRoles List = new ListRoles();
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group mb-3">
                                <label asp-for="UserRolesId" class="control-label"></label>
                                <select asp-for="UserRolesId" class="form-control" value="" required>
                                    <option value="">- Select -</option>
                                    @foreach (var item in List.Roles)
                                    {
                                        <option value="@item.Id">@item.Name</option>
                                    }
                                </select>
                                <span asp-validation-for="UserRolesId" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group form-check mb-3">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="IsUpload" /> @Html.DisplayNameFor(model => model.IsUpload)
                                </label>
                            </div>
                            <div class="form-group mt-3">
                                <a asp-action="Index" class="btn btn-secondary">Back</a>
                                <input type="submit" value="Save Changes" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>


    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }

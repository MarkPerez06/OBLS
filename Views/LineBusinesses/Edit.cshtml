@model OBLS.Models.LineBusiness

@{
    ViewBag.Title = "Line of Business";
    ViewBag.pTitle = "Line of Business";
    ViewBag.pageTitle = "Update";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Id" />
                            <div class="form-group mb-3">
                                <label asp-for="Code" class="control-label"></label>
                                <input asp-for="Code" class="form-control" />
                                <span asp-validation-for="Code" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Description" class="control-label"></label>
                                <textarea asp-for="Description" class="form-control"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="SignageBillboard_Capacity" class="control-label"></label>
                                <input asp-for="SignageBillboard_Capacity" class="form-control" />
                                <span asp-validation-for="SignageBillboard_Capacity" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="SignageBillboard_NoOfUnits" class="control-label"></label>
                                <input asp-for="SignageBillboard_NoOfUnits" class="form-control" />
                                <span asp-validation-for="SignageBillboard_NoOfUnits" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="WeightsAndMeasures_Capacity" class="control-label"></label>
                                <input asp-for="WeightsAndMeasures_Capacity" class="form-control" />
                                <span asp-validation-for="WeightsAndMeasures_Capacity" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="WeightsAndMeasures_NoOfUnits" class="control-label"></label>
                                <input asp-for="WeightsAndMeasures_NoOfUnits" class="form-control" />
                                <span asp-validation-for="WeightsAndMeasures_NoOfUnits" class="text-danger"></span>
                            </div>
                            <div class="form-group mt-3">
                                <a asp-action="Index" class="btn btn-secondary">Back</a>
                                <input type="submit" value="Save Changes" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

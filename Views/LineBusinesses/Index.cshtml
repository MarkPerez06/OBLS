@model IEnumerable<OBLS.Models.LineBusiness>
@{
    ViewBag.Title = "Maintenance";
    ViewBag.pTitle = "Maintenance";
    ViewBag.pageTitle = "Line of Business";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="row mb-2">
                    <div class="col-6">
                        <h4 class="card-title">@ViewBag.pageTitle</h4>
                    </div>
                    <div class="col-6">
                        <a asp-action="Create" class="float-end btn btn-primary btn-sm">Create New</a>
                    </div>
                </div>
                <table id="datatable-buttons" class="table table-responsive table-bordered table-striped table-hover dt-responsive nowrap w-100">
                    <thead>
                        <tr>
                            <th>No.</th>
                            <th>
                                @Html.DisplayNameFor(model => model.Code)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Description)
                            </th>
                            <th>
                                Signage/Billboard
                            </th>
                            <th>
                                Weights and Measures
                            </th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int count = 0;
                        }
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>
                                    @count.
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Code)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    Capacity: <b>@Html.DisplayFor(modelItem => item.SignageBillboard_Capacity)</b>
                                    <br />
                                    No. of Units: <b>@Html.DisplayFor(modelItem => item.SignageBillboard_NoOfUnits)</b>
                                </td>
                                <td>
                                    Capacity: <b>@Html.DisplayFor(modelItem => item.WeightsAndMeasures_Capacity)</b>
                                    <br />
                                    No. of Units: <b>@Html.DisplayFor(modelItem => item.WeightsAndMeasures_NoOfUnits)</b>
                                </td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">View</a> |
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm">Edit</a> |
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
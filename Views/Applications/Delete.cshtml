@model OBLS.Models.Application
@{
    ViewBag.Title = "Business Permit";
    ViewBag.pTitle = "Business Permit";
    ViewBag.pageTitle = "Delete Applications";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h5>Are you sure you want to delete this?</h5>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Application_Type)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Application_Type)
                    </dd>

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Application_Year)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Application_Year)
                    </dd>

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Application_PaymentMode)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Application_PaymentMode)
                    </dd>


                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Business_Name)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Business_Name)
                    </dd>

                    <dt class="col-sm-2">
                        Applicant
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Owner_FirstName)  @Html.DisplayFor(model => model.Owner_MiddleName)  @Html.DisplayFor(model => model.Owner_LastName) @Html.DisplayFor(model => model.Owner_Suffix)
                    </dd>

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Application_Status)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Application_Status)
                    </dd>

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Application_Method)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Application_Method)
                    </dd>
                    
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Application_DateTime)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Application_DateTime)
                    </dd>




                </dl>
                <hr />
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <a asp-action="Index" class="btn btn-secondary">Back</a>
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>
</div>

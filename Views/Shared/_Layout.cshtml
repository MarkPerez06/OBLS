@using Microsoft.AspNetCore.Identity;
@{
    var _signInManager = Context.RequestServices.GetRequiredService<SignInManager<IdentityUser>>();
    bool IsSignedIn = _signInManager.IsSignedIn(User);
}
<!DOCTYPE html>
<html lang="en">
<head>
    @await Html.PartialAsync("~/Views/Shared/_title_meta.cshtml")
    @RenderSection("head", required: false)
    @RenderSection("styles", required: false)
    @await Html.PartialAsync("~/Views/Shared/_head_css.cshtml")
</head>

<body data-topbar="dark" data-layout="horizontal" data-layout-size="boxed">
    <div id="layout-wrapper bg-white">
        @await Html.PartialAsync("~/Views/Shared/_horizontal2.cshtml")
        <div class="main-content">
            <div class="page-content">
                <div class="container-fluid">
                    @if (IsSignedIn)
                    {
                        @await Html.PartialAsync("~/Views/Shared/_page_title.cshtml")
                    }
                    @RenderBody()
                </div>
            </div>
            @await Html.PartialAsync("~/Views/Shared/_footer.cshtml")
        </div>
    </div>
    <div class="rightbar-overlay"></div>
    @RenderSection("externalhtml", required: false)
    @RenderSection("scripts", required: false)
    @Html.Partial("~/Views/Shared/_vendor_scripts.cshtml")
</body>
</html>
